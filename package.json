{
  "name": "react-rxjs-flux",
  "version": "2.1.4",
  "description": "A small library for creating applications based on unidirectional data flow with RxJS",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.tsx\"",
    "lint": "tslint -p tsconfig.json",
    "prepublishOnly": "npm test && npm run lint && npm build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jarlah/react-rxjs-flux.git"
  },
  "keywords": [
    "typesafe",
    "action",
    "creator",
    "redux",
    "react",
    "hooks"
  ],
  "author": "Jarl André Hübenthal",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/jarlah/react-rxjs-flux/issues"
  },
  "homepage": "https://github.com/jarlah/react-rxjs-flux#readme",
  "devDependencies": {
    "@testing-library/dom": "^7.31.0",
    "@testing-library/react": "^11.2.7",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.6.0",
    "@types/react": "^17.0.6",
    "@types/react-dom": "^17.0.5",
    "acorn": "^8.2.4",
    "jest": "^26.6.3",
    "minimist": ">=1.2.5",
    "prettier": "^2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "7",
    "ts-jest": "^26.5.6",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.2.4"
  },
  "resolutions": {
    "@types/react": "^17.0.2"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "7"
  }
}
