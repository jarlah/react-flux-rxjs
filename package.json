{
  "name": "react-rxjs",
  "version": "0.0.0-development",
  "description": "A small library for creating applications based on unidirectional data flow with RxJS",
  "keywords": [],
  "main": "dist/react-rxjs.umd.js",
  "module": "dist/react-rxjs.es5.js",
  "typings": "dist/types/react-rxjs.d.ts",
  "files": [
    "dist"
  ],
  "author": "Jarl André Hübenthal <jarl.andre@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/jarlah/react-rxjs.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=6.0.0"
  },
  "scripts": {
    "lint": "tslint -t codeFrame 'src/**/*.ts*' 'test/**/*.ts*'",
    "prebuild": "rimraf dist",
    "build": "tsc --jsx react && rimraf compiled* && rollup -c && typedoc --jsx react --out dist/docs --target es6 --theme minimal src",
    "start": "node ./node_modules/.bin/tsc-watch --jsx react -p tsconfig.test.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:prod": "rimraf compiled* && npm run lint && node disableTextSummary.js && npm run test -- --coverage --no-cache && node remap_coverage.js",
    "deploy-docs": "ts-node tools/gh-pages-publish",
    "report-coverage": "cat ./coverage_remapped/coverage.lcov | coveralls",
    "commit": "git-cz",
    "semantic-release": "semantic-release",
    "semantic-release-prepare": "ts-node tools/semantic-release-prepare",
    "precommit": "lint-staged",
    "prepush": "npm run test:prod && npm run build",
    "commitmsg": "validate-commit-msg"
  },
  "lint-staged": {
    "{src,test}/**/*.{ts, tsx}": [
      "prettier --write --no-semi",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": "conventional-commit-types",
      "helpMessage": "Use \"npm run commit\" instead, we use conventional-changelog format :) (https://github.com/commitizen/cz-cli)"
    }
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ],
    "coverageReporters": [
      "json"
    ]
  },
  "devDependencies": {
    "@types/enzyme": "^3.9.1",
    "@types/enzyme-to-json": "^1.5.3",
    "@types/jest": "^24.0.11",
    "@types/node": "^11.13.0",
    "@types/react": "^16.8.10",
    "@types/react-dom": "^16.8.3",
    "@types/react-test-renderer": "^16.8.1",
    "colors": "^1.3.3",
    "commitizen": "^3.0.7",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.2",
    "enzyme-to-json": "^3.3.5",
    "husky": "^1.3.1",
    "jest": "^24.6.0",
    "lint-staged": "^8.1.5",
    "lodash.camelcase": "^4.3.0",
    "prettier": "^1.16.4",
    "prompt": "^1.0.0",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-test-renderer": "^16.8.6",
    "remap-istanbul": "^0.13.0",
    "replace-in-file": "^3.4.4",
    "rimraf": "^2.6.3",
    "rollup": "^1.8.0",
    "rxjs": "^6.4.0",
    "semantic-release": "^15.13.3",
    "shelljs": "^0.8.3",
    "ts-jest": "^24.0.1",
    "ts-node": "^8.0.3",
    "tsc-watch": "^2.1.2",
    "tslint": "^5.15.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-config-standard": "^8.0.1",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.1",
    "validate-commit-msg": "^2.14.0",
    "rollup-plugin-typescript": "latest",
    "rollup-plugin-jsx": "latest"
  }
}
